{
	"name": "backend",
	"version": "1.0.0",
	"description": "API Backend with Hono and Prisma",
	"type": "module",
	"scripts": {
		"setup": "npm install && npm run prisma:push && npm run prisma:seed && npm run start",
		"dev": "tsx watch src/index.ts",
		"start": "tsx src/index.ts",
		"prisma:generate": "prisma generate",
		"prisma:push": "prisma db push",
		"prisma:studio": "prisma studio",
		"prisma:seed": "tsx prisma/seed.ts",
		"biome:lint": "biome lint --write --verbose --unsafe .",
		"biome:format": "biome format --write --verbose .",
		"biome:check": "biome check --write --unsafe --verbose ."
	},
	"dependencies": {
		"@hono/node-server": "^1.14.4",
		"@prisma/client": "^6.10.1",
		"hono": "^4.8.3",
		"zod": "^4.0.15"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@faker-js/faker": "^9.9.0",
		"@types/node": "^24.0.10",
		"prisma": "^6.10.1",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3"
	},
	"prisma": {
		"seed": "tsx prisma/seed.ts"
	},
	"author": "Go Saito",
	"license": "MIT"
}
