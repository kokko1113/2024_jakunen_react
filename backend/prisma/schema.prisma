// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.sqlite"
}


model Category {
  id   Int    @id @default(autoincrement())
  name String

  @@map("categories")
}

model Post {
  id           Int      @id @default(autoincrement())
  title        String
  content      String
  category     String
  author       String
  likes        Int      @default(0)
  commentCount Int      @default(0)
  createdAt    DateTime @default(now())
  imageUrl     String?
  comments     Comment[]

  @@map("posts")
}

model Comment {
  id        Int      @id @default(autoincrement())
  postId    Int
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  author    String
  content   String
  createdAt DateTime @default(now())

  @@map("comments")
  @@index([postId])
}
